<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    tools:context=".TermsActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#6366F1"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Back"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="16dp" />

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Terms and Conditions"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center_vertical" />

    </LinearLayout>

    <!-- Scrollable Terms Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/acceptButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Last Updated -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Updated: January 2024"
                android:textSize="12sp"
                android:textColor="#64748B"
                android:textStyle="italic"
                android:layout_marginBottom="24dp" />

            <!-- Privacy Policy Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#6366F1"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Agreement to Terms"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1E293B"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By accessing, installing, or using the MintyMinutes mobile application, connecting the MintyMinutes brush holder device ('Device') to your account, or utilizing any services provided by MintyMinutes ('we,' 'us,' 'our'), you agree to be bound by these Terms of Service. If you do not agree to these terms, do not use our service."
                android:textSize="14sp"
                android:textColor="#475569"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Eligibility and Account Registration"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1E293B"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age Requirement: You must be at least 13 years old to use MintyMinutes. If you are under 18, you represent that you have your parent or guardian's permission to use the Service and that they have read and agreed to these Terms on your behalf.\n\nAccount Credentials: You are responsible for maintaining the confidentiality of your login credentials and for all activities that occur under your account. You must immediately notify us of any unauthorized use of your account."
                android:textSize="14sp"
                android:textColor="#475569"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Description of Service"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1E293B"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MintyMinutes is an oral hygiene tracking system consisting of:\n• A smart brush holder with motion sensors\n• A mobile application that displays brushing data\n• Cloud-based data syncing and analytics\n• Reminder and notification features"
                android:textSize="14sp"
                android:textColor="#475569"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. User-Generated Content and Data"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1E293B"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brushing Data: By using the service, you grant MintyMinutes a limited license to process, store, and analyze your brushing data (session times, durations) solely for the purpose of providing and improving the Service. This data is anonymized and aggregated for internal analytics.\n\nFeedback: Any feedback, comments, or suggestions you provide regarding MintyMinutes becomes our property without compensation to you."
                android:textSize="14sp"
                android:textColor="#475569"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="32dp" />

            <!-- Terms and Conditions Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terms and Conditions"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#6366F1"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Agreement to Terms"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1E293B"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By accessing, installing, or using the MintyMinutes mobile application, connecting the MintyMinutes brush holder device ('Device') to your account, or utilizing any services provided by MintyMinutes ('we,' 'us,' 'our'), you agree to be bound by these Terms of Service. If you do not agree to these terms, do not use our service."
                android:textSize="14sp"
                android:textColor="#475569"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Eligibility and Account Registration"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1E293B"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age Requirement: You must be at least 13 years old to use MintyMinutes. If you are under 18, you represent that you have your parent or guardian's permission to use the Service and that they have read and agreed to these Terms on your behalf.\n\nAccount Credentials: You are responsible for maintaining the confidentiality of your login credentials and for all activities that occur under your account. You must immediately notify us of any unauthorized use of your account."
                android:textSize="14sp"
                android:textColor="#475569"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Description of Service"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1E293B"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MintyMinutes is an oral hygiene tracking system consisting of:\n• A smart brush holder with motion sensors\n• A mobile application that displays brushing data\n• Cloud-based data syncing and analytics\n• Reminder and notification features"
                android:textSize="14sp"
                android:textColor="#475569"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. User-Generated Content and Data"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1E293B"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brushing Data: By using the service, you grant MintyMinutes a limited license to process, store, and analyze your brushing data (session times, durations) solely for the purpose of providing and improving the Service. This data is anonymized and aggregated for internal analytics.\n\nFeedback: Any feedback, comments, or suggestions you provide regarding MintyMinutes becomes our property without compensation to you."
                android:textSize="14sp"
                android:textColor="#475569"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="32dp" />

            <!-- Important Note - FIXED THIS SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FEE2E2"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <!-- FIXED: Changed android:textColor to android:tint -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_dialog_info"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Please read these terms carefully. You must accept them to use MintyMinutes."
                    android:textSize="14sp"
                    android:textColor="#991B1B"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Accept Button -->
    <Button
        android:id="@+id/acceptButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Accept Terms and Conditions"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/button_background"
        android:textColor="#FFFFFF"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>